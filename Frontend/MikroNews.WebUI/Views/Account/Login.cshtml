@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .form-box {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 40px;
        max-width: 400px;
        width: 100%;
        text-align: center;
    }

    h2 {
        margin-bottom: 30px;
        color: #333;
        font-size: 24px;
    }

    .input-box {
        position: relative;
        margin-bottom: 30px;
    }

        .input-box input {
            width: 100%;
            padding: 10px;
            padding-left: 40px;
            font-size: 16px;
            border: none;
            border-bottom: 2px solid #ddd;
            outline: none;
            transition: 0.3s;
        }

            .input-box input:focus {
                border-bottom: 2px solid #333;
            }

        .input-box label {
            position: absolute;
            top: 50%;
            left: 40px;
            transform: translateY(-50%);
            font-size: 16px;
            color: #aaa;
            pointer-events: none;
            transition: 0.3s;
        }

        .input-box input:focus ~ label,
        .input-box input:not(:placeholder-shown) ~ label {
            top: -10px;
            font-size: 12px;
            color: #333;
        }

        .input-box .icon {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            font-size: 18px;
            color: #aaa;
        }

    .remember-forgot {
        display: flex;
        justify-content: space-between;
        margin-bottom: 30px;
    }

        .remember-forgot a {
            color: #333;
            text-decoration: none;
            font-size: 14px;
        }

    .btn {
        background-color: #333;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 100%;
        font-size: 16px;
    }

        .btn:hover {
            background-color: #555;
        }

    .login-register {
        margin-top: 20px;
    }

        .login-register p {
            font-size: 14px;
            color: #333;
        }

        .login-register a {
            color: #007bff;
            text-decoration: none;
        }

            .login-register a:hover {
                text-decoration: underline;
            }

</style>

<div class="form-box login">
    <h2>Giriş Formu</h2>
    <form asp-controller="Account" asp-action="Login" method="post">
        <div class="input-box">
            <span class="icon"><ion-icon name="mail"></ion-icon></span>
            <input type="email" asp-for="Email" required>
            <label>Kullanıcı Maili</label>
        </div>
        <div class="input-box">
            <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
            <input asp-for="Password" type="password" required>
            <label>Parola</label>
        </div>
       
        <button type="submit" class="btn">Giriş</button>
       
    </form>
</div>
